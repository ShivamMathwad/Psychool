<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AptitudeResult"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:background="@drawable/gradient2"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/yatra_one"
            android:text="Your Test Score"
            android:textAlignment="center"
            android:textColor="@color/darkerGray"
            android:textSize="27dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#1DA1F2"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="22dp"
                android:gravity="center"
                android:text="94%"
                android:textColor="@color/textcolor"
                android:textSize="28dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/test_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="24dp"
            android:text="Numerical Aptitude Test"
            android:textColor="@color/darkerGray"
            android:textStyle="bold"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/test_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_type"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="5dp"
            android:text="Numerical aptitude refers to understanding numerical relationships and applying the same to the issue/ problem. It is related to a studentâ€™s ability to do mathematical operations quickly and accurately.  This sub-test assesses how well a student is able to solve problems covering four primary arithmetic operations like addition, subtraction, multiplication and division.  At the same time, it also covers areas like ratio, percentage, square and square root, cube and cube root, number sequence, factorization, linear equation, work and speed, etc.\n\nNumerical aptitude refers to understanding numerical relationships and applying the same to the issue/ problem."
            android:textColor="@color/darkerGray"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_description"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/graduate"/>

    </RelativeLayout>
</ScrollView>