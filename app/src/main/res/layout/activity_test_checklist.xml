<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".TestChecklist">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:text="Complete all the following tests to get accurate career suggestions"
            android:textSize="20dp"
            android:textColor="@color/textcolor"/>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <TextView
                    android:id="@+id/personality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:text="Personality Test"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/personality_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/red_cross" />

                <TextView
                    android:id="@+id/numerical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/personality"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="17dp"
                    android:text="Numerical Aptitude Test"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/numerical_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/personality_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/red_cross" />

                <TextView
                    android:id="@+id/perceptual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/numerical"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="17dp"
                    android:text="Perceptual Aptitude Test"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/perceptual_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/numerical_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/red_cross" />

                <TextView
                    android:id="@+id/verbal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/perceptual"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="17dp"
                    android:text="Verbal Reasoning Test"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/verbal_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/perceptual_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/red_cross" />

                <TextView
                    android:id="@+id/abstractApti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/verbal"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="17dp"
                    android:text="Abstract Reasoning Test"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/abstract_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/verbal_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/red_cross" />

                <TextView
                    android:id="@+id/spatial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/abstractApti"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="18dp"
                    android:text="Spatial Aptitude Test"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/spatial_img"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/abstract_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/red_cross" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@color/newblue"
            android:text="Suggest me some careers"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAllCaps="false"/>

    </RelativeLayout>
</ScrollView>