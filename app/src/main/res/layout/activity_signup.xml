<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21282E"
    android:fillViewport="true"
    tools:context=".Signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#21282E">

        <include
            android:id="@+id/actionbar"
            layout="@layout/action_bar2" />

        <EditText
            android:id="@+id/username"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_below="@id/actionbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:backgroundTint="@color/newblue"
            android:hint="Enter Username"
            android:textColor="@color/newgreen"
            android:textColorHint="@color/newgreen" />

        <EditText
            android:id="@+id/password"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/newblue"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/newgreen"
            android:textColorHint="@color/newgreen" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/newblue"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/newgreen"
            android:textColorHint="@color/newgreen" />

        <EditText
            android:id="@+id/email"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_below="@+id/confirm_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/newblue"
            android:hint="Enter email"
            android:inputType="textEmailAddress"
            android:textColor="@color/newgreen"
            android:textColorHint="@color/newgreen" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:text="Select your educational status"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="85dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/text">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.DropDownItem.Spinner" />
        </RelativeLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="85dp"
            android:background="@drawable/rounded_border2"
            android:foreground="?android:selectableItemBackground"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </RelativeLayout>
</ScrollView>