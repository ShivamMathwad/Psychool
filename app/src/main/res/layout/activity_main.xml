<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#fafad2">

    <include
        android:id="@+id/actionbar"
        layout="@layout/action_bar"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:src="@mipmap/account" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="Shivam Mathwad"
        android:textColor="#232b2b"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="19dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <androidx.cardview.widget.CardView
            android:id="@+id/aptitude_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:padding="2dp"
            android:layout_weight="50"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/aptitude"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/aptitude_icon" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="22dp"
                    android:layout_below="@+id/aptitude"
                    android:gravity="center_horizontal"
                    android:text="Aptitude test"
                    android:textColor="#232b2b"
                    android:textSize="17dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/psychometric_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:padding="2dp"
            android:layout_weight="50"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/psychometric"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/psychometric_icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/psychometric"
                    android:background="#232b2b" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="22dp"
                    android:layout_below="@+id/psychometric"
                    android:gravity="center_horizontal"
                    android:text="Psychometric test"
                    android:textColor="#232b2b"
                    android:textSize="17dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="19dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <androidx.cardview.widget.CardView
            android:id="@+id/result_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_weight="50"
            android:padding="2dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/result" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/result"
                    android:background="#232b2b" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="22dp"
                    android:layout_below="@+id/result"
                    android:gravity="center_horizontal"
                    android:text="Result"
                    android:textColor="#232b2b"
                    android:textSize="17dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_weight="50"
            android:padding="2dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:padding="5dp"
                    android:src="@mipmap/profile" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/profile"
                    android:background="#232b2b" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="22dp"
                    android:layout_below="@+id/profile"
                    android:gravity="center_horizontal"
                    android:text="My Profile"
                    android:textColor="#232b2b"
                    android:textSize="17dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>